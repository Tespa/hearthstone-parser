{
  "name": "hearthstone-parser",
  "version": "0.0.0-development",
  "description": "This simple module monitors the Hearthstone log file and emits events based on important events from the log.",
  "main": "dist/index.js",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "chokidar": "^2.1.5",
    "debug": "^4.1.1",
    "eventemitter2": "^5.0.1",
    "extend": "^3.0.2",
    "lodash.throttle": "^4.1.1",
    "require-all": "^3.0.0",
    "split-lines": "^2.0.0",
    "strict-event-emitter-types": "^2.0.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@supportclass/tsconfig-base": "^1.0.2",
    "@types/chai": "^4.1.7",
    "@types/chokidar": "^2.1.3",
    "@types/debug": "4.1.3",
    "@types/extend": "^3.0.1",
    "@types/lodash.throttle": "^4.1.6",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "chai": "^4.2.0",
    "codecov": "^3.3.0",
    "dtslint": "^0.6.1",
    "eslint": "^5.16.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-typescript": "^0.9.0",
    "husky": "^1.3.1",
    "mocha": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "semantic-release": "^15.13.3",
    "source-map-support": "^0.5.12",
    "trash-cli": "^1.4.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "prebuild": "npm t",
    "build": "trash dist && tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "npm-run-all test:*",
    "test:static": "eslint \"**/*.ts\"",
    "test:types": "dtslint test/types",
    "test:mocha": "nyc mocha",
    "semantic-release": "semantic-release"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "hearthstone",
    "deck tracker",
    "log",
    "parser",
    "watcher"
  ],
  "author": "",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tespa/hearthstone-parser.git"
  }
}
