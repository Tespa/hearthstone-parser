{
  "name": "hearthstone-parser",
  "version": "0.0.0-development",
  "description": "This simple module monitors the Hearthstone log file and emits events based on important events from the log.",
  "main": "dist/index.js",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "chokidar": "^2.0.3",
    "debug": "^3.1.0",
    "eventemitter2": "^5.0.1",
    "extend": "^3.0.1",
    "lodash.throttle": "^4.1.1",
    "require-all": "^2.2.0",
    "split-lines": "^1.1.0",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@supportclass/tsconfig-base": "^1.0.2",
    "@types/chai": "^4.1.3",
    "@types/chokidar": "^1.7.5",
    "@types/debug": "0.0.30",
    "@types/extend": "^3.0.0",
    "@types/lodash.throttle": "^4.1.6",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-typescript": "^0.9.0",
    "husky": "^1.3.1",
    "mocha": "^5.1.1",
    "nyc": "^13.3.0",
    "semantic-release": "^15.13.3",
    "source-map-support": "^0.5.6",
    "trash-cli": "^1.4.0",
    "ts-node": "^6.0.2",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "prebuild": "npm t",
    "build": "trash dist && tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "static": "eslint \"**/*.ts\"",
    "test": "npm run static && nyc mocha",
    "semantic-release": "semantic-release"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "hearthstone",
    "deck tracker",
    "log",
    "parser",
    "watcher"
  ],
  "author": "",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tespa/hearthstone-parser.git"
  }
}
